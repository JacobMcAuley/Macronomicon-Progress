{
    "compilerOptions": {
        "allowJs": true,
        "target": "es2020",
        "module": "commonjs",
        "jsx": "react",
        "baseUrl": "./",
        "rootDir": "./src",
        "outDir": "./dist/",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": false,
        "types": ["webpack-env", "foundry-vtt-types", "resize-observer-browser", "jest"],
        "noErrorTruncation": true
    },
    "include": ["./src/**/*.ts", "./src/**/*.tsx", "./src/typings/blockly.d.ts", "./src/typings/global.d.ts"],
    "exclude": []
}
